# Suma de 3 parámetros y devuelve la suma de los 3

#opcion 1


suma = 3 + 20 + 8
print(suma)

#opcion 2

valor1 = 15
valor2 = 25
valor3 = 36
resultado = valor1 + valor2 + valor3 
print(resultado)

#opcion 3

val1= float(input("ingrese un valor: "))
val2= float(input("ingrese segundo valor: "))
val3= float(input("ingrese ultimo valor: "))
calculo= val1 + val2 + val3
print(calculo)

############################################################################################

# Resta de 2 parámetros y devuelve la resta de los 2

resta= 10 - 8
print("el resultado de la resta es:" , resta)

valor1= 25
valor2=13
resto= valor1 - valor2
print("el resultado es:", resto)

val1= int(input("ingrese un valor: "))
val2= int(input("ingrese el valor a descontar: "))
print("el resultado es:" , val1 - val2)


